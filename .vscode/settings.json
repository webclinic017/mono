{
    "editor.rulers": [120],
    "editor.codeActionsOnSave": {},
    "[markdown]":  {
        "editor.wordWrap": "off",
    },
    "files.exclude": {
        "android": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "android": true,
    },
    "go.goroot": "~/development/mono/bazel-mono/external/go_sdk",
    "go.toolsEnvVars": {
        "GOPACKAGESDRIVER": "~/development/mono/tools/bash/gopackagesdriver.sh"
    },
    "go.enableCodeLens": {
        "references": false,
        "runtest": false
    },
    "go.useLanguageServer": false,
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
}
