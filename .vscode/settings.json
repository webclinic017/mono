{
    "editor.rulers": [120],
    "editor.codeActionsOnSave": {},
    "[markdown]":  {
        "editor.wordWrap": "off",
    },
    "files.exclude": {
        "android": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "android": true,
    },
    "go.goroot": "~/development/mono/bazel-mono/external/go_sdk",
    "go.toolsEnvVars": {
        "GOPACKAGESDRIVER": "~/development/mono/tools/bash/gopackagesdriver.sh"
    },
    "go.enableCodeLens": {
        "references": false,
        "runtest": false
    },
    "gopls": {
        "build.directoryFilters": [
            "-bazel-bin",
            "-bazel-out",
            "-bazel-testlogs",
            "-bazel-mono",
            "-.github",
            "-helm",
            "-ios",
            "-proto",
            "-python",
            "-tools",
        ],
        "formatting.gofumpt": true,
        "ui.completion.usePlaceholders": true,
        "ui.semanticTokens": true,
        "ui.codelenses": {
            "gc_details": false,
            "regenerate_cgo": false,
            "generate": false,
            "test": false,
            "tidy": false,
            "upgrade_dependency": false,
            "vendor": false
        },
    },
    "go.useLanguageServer": true,
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.vetOnSave": "off",
}
